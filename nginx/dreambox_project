upstream dreambox-frontend {
    server frontend:3000;
}

upstream dreambox-backend {
    server backend:8000;
}

server {
    listen 80;
    server_name dreambox.com;

    location /uploads {
        root /;
    }

    location / {
        proxy_set_header   Host            $host;
        proxy_set_header   X-Real-IP       $remote_addr;
        proxy_set_header   X-NginX-Proxy   true;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_http_version 1.1;
        proxy_redirect     off;
        proxy_buffering    off;
        proxy_pass http://dreambox-frontend;
    }
}

server {
    listen 80;
    server_name api.dreambox.com;

    location / {
        proxy_set_header   Host            $host;
        proxy_set_header   Upgrade         $http_upgrade;
        proxy_set_header   Connection      "upgrade";
        proxy_set_header   X-Real-IP       $remote_addr;
        proxy_set_header   X-NginX-Proxy   true;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_http_version 1.1;
        proxy_redirect     off;
        proxy_pass http://dreambox-backend;
    }
}
